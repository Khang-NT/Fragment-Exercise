<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="40dp">

        <TextView
            android:id="@+id/tv_salary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your salary: 0$" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <SeekBar
                android:id="@+id/sb_salary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="1000"
                android:progress="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sb_salary"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:text="0$" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/sb_salary"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:text="10000$" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Which sport do you like?" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp">

            <TableRow>
                <CheckBox
                    android:id="@+id/cb1"
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/sport_text_size"
                    android:text="Football" />

                <CheckBox
                    android:id="@+id/cb2"
                    android:layout_margin="5.0dip"
                    android:textSize="@dimen/sport_text_size"
                    android:text="Tennis" />

                <CheckBox
                    android:id="@+id/cb3"
                    android:layout_margin="5.0dip"
                    android:textSize="@dimen/sport_text_size"
                    android:text="Ping pong" />
            </TableRow>

            <TableRow>

                <CheckBox
                    android:id="@+id/cb4"
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/sport_text_size"
                    android:text="Swimming" />

                <CheckBox
                    android:id="@+id/cb5"
                    android:layout_margin="5.0dip"
                    android:textSize="@dimen/sport_text_size"
                    android:text="Volleyball" />

                <CheckBox
                    android:id="@+id/cb6"
                    android:layout_margin="5.0dip"
                    android:textSize="@dimen/sport_text_size"
                    android:text="Basketball" />
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/b_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20.0dip"
            android:text="Done"
            android:textColor="@android:color/white" />
    </LinearLayout>
</ScrollView>
